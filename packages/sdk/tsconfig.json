{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@daml.js/*": [
                "./src/daml-types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}